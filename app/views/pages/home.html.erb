
<div id="header">
  <h1>Louez un vehicule avec votre Smartphone</h1>
  <div class="form-inline">
    <%= form_tag cars_search_path do %>
      <div class="form-group mx-sm-3 mb-3">
        <%= select_tag "city", options_from_collection_for_select(Car.all, :city, :city) , {:class=>'form-control', :prompt => 'Ville de depart'}  %>
      </div>
      <div class="form-group mx-sm-3 mb-3">
        <%= text_field_tag  'starts_on','', id: "from"%>
      </div>
      <div class="form-group mx-sm-3 mb-3">
        <%= text_field_tag 'ends_on','', id: "to" %>
      </div>
      <div class="form-group mx-sm-3 mb-3">
        <%= select_tag "distance", options_for_select([['Distance', ''], ['100 km', 100], ['200 km', 200], ['300 km', 300], ['400 km', 400],['500 km', 500], ['600 km', 700], ['300 km', 800], ['400 km', 900],['1000 km', 1000], ['1100 km', 1100], ['1200 km', 1200], ['1300 km', 1300],['1400 km', 1400], ['1500 km', 1500], ['2000 km', 2000], ['3000 km', 3000]], disabled: '', selected: '', :class=>'form-control', :prompt => 'Distance') %>
      </div>
      <%= submit_tag 'Rechercher' %>
      <% end %>
    </div>
</div>

<h1 style="color: black">Nos Vehicules</h1>
<br>
<div class="container">
  <% @cars.each do |car| %>
  <div class="column">
    <div class="col-xs-12 col-sm-4">
    <div class="card"  style="background-image:url(<%= car.cars.first.url%>);">
      <div class="card-description">
        <h2><span style="font-size: 50px;"><%= car.price_cents %></span>â‚¬/Jrs</h2>
        <h2><%=  link_to car.name, car %></h2>
        <p style="color: white;"><%= car.year %>, Moteur <%= car.engine %>, <%= car.places %> Places, <%= car.gearbox %></p>
      </div>
      <%= link_to 'Show', car, class: 'card-link' %>
    </div>
    <br>
    </div>
  </div>
  <% end %>
</div>
